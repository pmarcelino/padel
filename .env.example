# ============================================================================
# Padel Opportunity Finder - Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# Do NOT commit .env to version control (it should be in .gitignore)

# ============================================================================
# API KEYS (Required)
# ============================================================================

# Google Maps API Key - REQUIRED for Places API and Geocoding
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your_google_api_key_here

# ============================================================================
# LLM API KEYS (Optional - for indoor/outdoor analysis)
# ============================================================================

# OpenAI API Key (for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Provider: 'openai' or 'anthropic'
LLM_PROVIDER=openai

# LLM Model to use
# OpenAI options: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# Anthropic options: claude-3-5-sonnet-20241022, claude-3-opus-20240229
LLM_MODEL=gpt-4o-mini

# ============================================================================
# DATA COLLECTION SETTINGS
# ============================================================================

# Geographic region to search for padel facilities
SEARCH_REGION=Algarve, Portugal

# Enable caching for API responses (recommended: True)
CACHE_ENABLED=True

# Cache time-to-live in days
CACHE_TTL_DAYS=30

# Delay between API requests in seconds (to respect rate limits)
RATE_LIMIT_DELAY=0.2

# ============================================================================
# ANALYSIS SETTINGS
# ============================================================================

# Minimum rating for facilities (0.0 to 5.0)
MIN_RATING=0.0

# Maximum rating for facilities (0.0 to 5.0)
MAX_RATING=5.0

# ============================================================================
# OPPORTUNITY SCORING WEIGHTS
# ============================================================================
# These weights determine how different factors contribute to opportunity score
# IMPORTANT: All weights must sum to 1.0

# Weight for population/demand factor (0.0 to 1.0)
POPULATION_WEIGHT=0.2

# Weight for market saturation factor (0.0 to 1.0)
SATURATION_WEIGHT=0.3

# Weight for quality gap factor (0.0 to 1.0)
QUALITY_GAP_WEIGHT=0.2

# Weight for geographic coverage gap factor (0.0 to 1.0)
GEOGRAPHIC_GAP_WEIGHT=0.3
